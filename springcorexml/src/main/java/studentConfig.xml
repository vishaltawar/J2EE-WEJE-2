<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 1st Way to create Beans -->
	<bean class="com.jspider.springcore.beans.StudentBeans"
		name="Student1">
		<property name="id">
			<value>1</value>
		</property>
		<property name="name">
			<value>Vishal</value>
		</property>
		<property name="email">
			<value>vishal@gmail.com</value>
		</property>
		<property name="contact">
			<value>9875687945</value>
		</property>
	</bean>

	<!-- 2st Way to create Beans -->
	<bean class="com.jspider.springcore.beans.StudentBeans"
		name="Student2">
		<property name="id" value="1" />
		<property name="name" value="Shakti" />
		<property name="email" value="shakti@gmail.com"></property>
		<property name="contact" value="9545308265" />
	</bean>


</beans>